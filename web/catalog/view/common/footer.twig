<script>
  $(document).ready(function() {
    $('.cart_info').load('/common/cart/info');
  });
</script>
{% endif %}
<!--====== Module ======-->
<script>
  function linkModule(id) {
    if ($('.id_' + id + ':hidden').length) {
      $(".id_" + id).addClass('active')
    } else {
      $('html, body').animate({
        scrollTop: $(".id_" + id).offset().top - $('.box_header').outerHeight(true)
      }, 300);
    }
  }
</script>
<!--====== End Module ======-->


<script>
  $('.item_child_menu.active').parents('.item_menu').find('.parent_menu').trigger('click');

  function toggleMenu(e) {
    var menuActive = $('.item_menu.active');
    if (menuActive.length && !$(e).parents('.item_menu').hasClass('active')) {
      menuActive.find('.child_menu').slideUp(500);
      $('.item_menu').find('.fa-minus').removeClass('fa-minus').addClass('fa-plus');
      menuActive.removeClass('active');
    }

    $(e).parents('.item_menu').toggleClass('active');
    $(e).parents('.item_menu').children('.child_menu').slideToggle(500);
    $(e).find('.fa').toggleClass('fa-plus fa-minus');
  }

  $('.button_menu_account, .button_menu_close, overlay').click(function() {
    $('.menu_bar_mb, overlay').toggleClass('active');
    // $('.menu_bar_mb .menu_childs_mb').slideUp(200);

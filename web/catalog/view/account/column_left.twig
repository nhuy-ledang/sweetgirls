  });
  $(document).ready(function() {
    function marginFooter() {
      if ($(window).width() < 1280) {
        $('footer').css('margin-bottom', '50px');
      } else {
        $('footer').css('margin-bottom', '0');
      }
    }
    setTimeout(function() {
      marginFooter();
    }, 1000);
    $(window).resize(marginFooter)
  });
</script>

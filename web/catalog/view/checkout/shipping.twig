                          <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" ng-model="item.selected" ng-change="onChangeIncludedProduct(item)" id="customCheck-{{ '{{ item.id }}' }}">
                            <label class="custom-control-label font-weight-bold cursor-pointer" for="customCheck-{{ '{{ item.id }}' }}"><span ng-bind="item.name"></span><span class="text-primary ml-3"><span ng-bind="item.price > 0 ? '+' + (item.price|formatCurrency) + 'đ' : 'Miễn phí'"></span></span></label>
                            <div class="fs-sm" ng-bind="item.short_description"></div>

{{ header }}
<script>window.redeemProducts={{ redeem_products|json_encode }};</script>
<main id="main-content" ng-controller="CheckoutCartCtr" ng-init="init()" style="display: none" ng-style="{'display':inited?'':'none'}">
  <div class="container-lg mt-10">
    <ol class="breadcrumb justify-content-start mb-2">
      {% for item in breadcrumbs %}
      <li class="breadcrumb-item{{ loop.last ? ' active':'' }}"><a href="{{ item.href }}">{{ item.text }}</a></li>{% endfor %}
    </ol>
    {#{% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button></div>{% endif %}
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button></div>{% endif %}#}
  </div>
  {#<button class="d-xl-none fixed-top back-mb btn btn-primary w-100" onclick="goBack()"><span class="d-xl-none pl-2 ic-lg ic_angle_left icon-top-left top-center"></span> {{ button_cart}}</button>#}
  <div class="box-cart mt-0">
    <div class="container-lg">
      <div ng-if="data.loading" class="text-primary text-center py-5"><div class="spinner-border"><span class="sr-only">Loading...</span></div></div>
      <div ng-show="data.products.length && hasProduct" class="row no-gutters border-top border-bottom">
        <div class="col-xl-8 col-12 mb-5 mb-md-10 pr-xl-9">
          <div class="cart-list row no-gutters">
            <div class="col-12 border-bottom pb-6 pt-6" ng-repeat="item in data.products" ng-if="item.type!='I'">
              <div class="row no-gutters">
                <div class="col-12 col-sm-auto pr-sm-4">
                  <div class="img mx-auto" style="width: 130px; height: 130px;"><span class="embed-responsive embed-responsive-1by1 bg-cover"><span class="embed-responsive-item"><a href="{{ '{{ item.product.href }}' }}"><img ng-src="{{ '{{ item.product.thumb_url }}' }}" alt="{{ '{{ item.product.long_name?item.product.long_name:item.product.name }}' }}" class="w-100"></a></span></span></div>
                </div>
                <div class="col d-flex flex-column justify-content-between">
                  <div class="mt-2 mt-md-0">
                    <a href="{{ '{{ item.product.href }}' }}" class="font-weight-normal limit-text-2" ng-bind="item.product.long_name?item.product.long_name:item.product.name"></a>
                    <div ng-if="item.product.stock_status == 'out_of_stock'" class="badge badge-danger fs-6">{{ text_out_of_stock }}</div>
                    <div ng-if="item.product.stock_status == 'pre_order'" class="badge badge-warning fs-6">{{ text_pre_order }}</div>
                    <div class="d-flex flex-row justify-content-between mt-2 flex-wrap">
                      <div class="font-4 font-weight-bolder">
                        <span ng-if="item.type==='G'" ng-bind="(item.coins|number:'':0)+' coin'"></span>
                        <span ng-if="item.type!='G'">
                          <span ng-if="!item.product.special"  ng-bind="(item.product.price|currency:'':0)+'đ'"></span>
                          <span ng-if="item.product.special" class="font-4 font-weight-bolder" ng-bind="(item.product.special|currency:'':0)+'đ'"></span>
                        </span>
                      </div>
                      <div class="quantity" ng-if="item.type!='G'">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <button type="button" class="btn minus d-flex align-items-center justify-content-center rounded-0 border" ng-disabled="data.submitted" ng-click="updateCart(item, 'minus')" style="width: 30px; height: 30px"><span class="text-body ic_minus"></span>-</button>
                          </div>
                          <input type="text" name="quantity" ng-model="item.quantity" size="1" class="form-control text-center" style="width: 50px; height: 30px;">
                          <div class="input-group-append">
                            <button type="button" class="btn plus d-flex align-items-center justify-content-center rounded-0 border" ng-disabled="data.submitted" ng-click="updateCart(item, 'plus')" style="width: 30px; height: 30px"><span class="text-body ic_plus"></span>+</button>
                          </div>
                        </div>
                      </div>
                    </div>
                      <p ng-if="item.product.special" class="text-gray"><del class="font-weight-bold mr-2" ng-bind="(item.product.price|currency:'':0)+'đ'"></del> <b class="text-primary" ng-bind="item.product.reduce"></b></p>
                  </div>
                  <div class="d-flex justify-content-between">
                    <div class="icon-bottom-left d-flex mb-2 mb-sm-0 mt-2 mt-sm-0 order-last">
                      <a class="cursor-pointer d-flex align-items-center text-primary" ng-click="removeCart(item)" href="javascript:;"><span class="fa fa-trash-o pr-1"></span><span>{{ button_remove?button_remove:'Xóa bỏ' }}<!-- button_remove --></span></a>
                      <div class="pl-4 cursor-pointer text-primary d-flex align-items-center" ng-click="like(item)">
                        {#<span ng-class="{'ic_heart': item.liked, 'ic_heart_black': !item.liked}"></span>#}
                        <span class="fa fa-heart-o pr-1"></span>
                        <span>{{ text_favourite?text_favourite:'Yêu thích' }}</span><span class="d-md-none">&nbsp;</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div ng-if="item.gifts&&item.gifts.length" ng-repeat="gift in item.gifts">
                <div class="row no-gutters mt-4">
                  <div class="col-12 col-sm-auto pr-sm-4" style="width: 130px;box-sizing: content-box;"></div>
                  <div class="col-auto pr-2 pr-sm-4">
                    <div class="img mx-auto" style="width: 50px; height: 50px;"><span class="embed-responsive embed-responsive-1by1 bg-cover"><span class="embed-responsive-item"><a href="{{ '{{ gift.href }}' }}"><img ng-src="{{ '{{ gift.small_url }}' }}" alt="{{ '{{ gift.long_name }}' }}" class="w-100 img-cover"></a></span></span></div>
                  </div>
                  <div class="col font-13">
                    <b><span ng-bind="gift.quantity"></span>x </b>
                    <a href="{{ '{{ gift.href }}' }}" class="font-weight-normal" ng-bind="gift.long_name?gift.long_name:gift.name"></a>
                    <b class="d-block text-green">Quà tặng</b>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 border-bottom pb-6 pt-6" ng-repeat="item in data.gift_orders.current_gifts">
              <div class="row no-gutters">
                <div class="col-12 col-sm-auto pr-sm-4">
                  <div class="img mx-auto" style="width: 130px; height: 130px;"><span class="embed-responsive embed-responsive-1by1 bg-cover"><span class="embed-responsive-item"><a href="{{ '{{ item.href }}' }}"><img ng-src="{{ '{{ item.thumb_url }}' }}" alt="{{ '{{ item.long_name?item.long_name:item.name }}' }}" class="w-100"></a></span></span></div>
                </div>
                <div class="col d-flex flex-column justify-content-between">
                  <div class="mt-2 mt-md-0">
                    <a href="{{ '{{ item.href }}' }}" class="font-weight-normal limit-text-2" ng-bind="item.long_name?item.long_name:item.name"></a>
                    <div class="d-flex flex-row justify-content-between mt-2 flex-wrap">
                      <div class="font-4 font-weight-bolder">
                        <span class="text-teal font-weight-bold">Quà tặng</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% if redeem_products %}
            <div class="redeem-coins mt-6 mt-md-8">
              <div class="d-flex justify-content-between align-items-center flex-md-row flex-column">
                <span class="text-uppercase font-weight-bold font-4">ĐỔI GO MART COIN NHẬN QUÀ NGAY</span>
                {% if userData.logged %}<span class="text-gray font-4 font-weight-bold">Bạn đang có: <span class="text-primary" ng-bind="currentUser.coins|number:'':0"></span>&nbsp;<span class="text-dark">{{ text_points }}</span></span>{% endif %}
              </div>
              <div class="papular-block single-img-demos mt-4">
                <!-- Item -->
                <div class="swiper swiper_redeem_coin_{{ id }}">
                  <div class="swiper-wrapper">
                      <div class="swiper-slide wid_block wow fadeInUp" ng-repeat="product in redeemProducts" data-wow-delay="0.{{ '{{ $index }}' }}s">
                        <!-- Item img -->
                        <div class="wid_img_block position-relative overflow-hidden">
                          <div class="wid_img img position-relative">
                            <div class="embed-responsive embed-responsive-{{ properties.imgFrame?properties.imgFrame:'1by1' }} bg-cover" ng-style="{'background-image': 'url(' + product.thumb_url + ')'}"></div>
                          </div>
                          <div class="wid_button_block overflow-hidden">
                            <div class="overflow-hidden" ng-if="!currentUser">
                              {% if global.config_login_popup %}
                                <a href="javascript:void(0);" class="cus_btn btn_white" ng-click="openLogin()">Đăng nhập</a>
                              {% else %}
                                <a href="/login" class="cus_btn btn_white">Đăng nhập</a>
                              {% endif %}
                            </div>
                            <div class="overflow-hidden" ng-if="currentUser.coins < product.coins && !product.is_redeem">
                              <button type="button" class="cus_btn btn_white" ng-bind="'Thiếu '+(product.coins-currentUser.coins|number:'':0)+' coin'"></button>
                            </div>
                            <div class="overflow-hidden" ng-if="currentUser.coins >= product.coins && !product.is_redeem">
                              <button type="button" ng-click="addProductByCoins(product)" class="cus_btn btn_white">{{ text_redeem }}</button>
                            </div>
                            <div class="overflow-hidden" ng-if="product.is_redeem">
                              <button type="button" class="cus_btn btn_white">Đã đổi</button>
                            </div>
                          </div>
                        </div>
                        <!-- Item Name -->
                        <div class="wid_info d-flex flex-column">
                          <div class="wid_short_description text-uppercase text-primary mt-3 font-6 font-weight-bold" ng-bind="product.category"></div>
                          <a href="{{ '{{ product.href }}' }}"><span class="wid_name mt-1 limit-text-2" ng-bind="product.name"></span></a>
                          <div class="mt-2 font-weight-bold font-4"><span ng-bind="(product.coins|number:'':0)+' Go Mart coin'"></span></div>
                          <div class="mt-1 text-gray font-weight-bold" ng-if="product.price">{{ text_worth }} <span ng-bind="(product.price|currency:'':0)+'đ'"></span></div>
                        </div>
                      </div>
                  </div>
                  <div class="section_dot" style="height: 45px">
                    <div class="swiper-pagination"></div>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
        <div class="cart_payment_info col-xl-4 col-12 pl-xl-9 pt-6 border-left">
          <div ng-if="data.gift_orders.next_gifts">
            <h5 class="font-5 font-weight-bold text-danger">Chỉ cần mua thêm <span ng-bind="((data.gift_orders.next_gifts.amount-data.totals.sub_total)|formatCurrency)+'đ'"></span> bạn sẽ nhận được bộ quà tặng trị giá <span ng-bind="(data.gift_orders.next_gifts.total|formatCurrency) +'đ'"></span></h5>
          </div>
          <div class="row no-gutters">
            <a href="/" class="cus_btn btn_primary w-100 col-6 pr-2">{{ button_buy_more }}<!-- button_buy_more --></a>
            {#<a href="{{ userData.logged ? '/checkout/shipping' : initData.loginUrl }}" class="col-6 pl-2" rel="nofollow" style="color: inherit"><button class="cus_btn w-100">{{ button_order_now }}<!-- button_order_now --></button></a>#}
            <a href="javascript:{}" ng-click="checkLogin('/checkout/shipping')" class="col-6 pl-2" rel="nofollow" style="color: inherit"><button class="cus_btn w-100">{{ button_order_now }}<!-- button_order_now --></button></a>
          </div>
          {% if global.config_ord_notification %}
            <div class="wid_gift mt-6 row no-gutters justify-content-center align-items-center">
              <img class="col-3" src="/assets/images/gift.gif" alt="">
              <span class="col-9 py-4 pr-4 text-primary" style="white-space: pre-wrap">{{ global.config_ord_notification }}</span>
            </div>
          {% endif %}
          <div class="wid_voucher mt-8 mb-3">
            <h4 class="font-weight-bold text-uppercase mb-3 font-4">{{ entry_coupon }}</h4>
            <a ng-click="selectCoupon()" class="d-flex justify-content-between align-items-center border py-2 px-3 cursor-pointer">
              <span class="text-primary font-weight-bold">
                <span ng-if="!data.coupon && !data.totals.voucher_code">Chưa nhập mã</span>
                <span ng-if="data.coupon" ng-bind="data.coupon.code"></span>
                <span ng-if="data.totals.voucher_code" ng-bind="data.totals.voucher_code"></span>
              </span>
              <span class="fa fa-angle-right"></span></a>
          </div>

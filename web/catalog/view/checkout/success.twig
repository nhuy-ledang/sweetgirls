{{ header }}
<style>
  .box-footer-top, .box-venue-form, .main-footer hr {
    display: none;
  }
  .block-success {
    position: relative;
    z-index: 1;
    min-height: calc(100vh - 10rem);
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: url("/assets/images/background/payment_success.png");
    background-position: center top;
  }
  .block-success h2 {
    letter-spacing: 5px;
  }
  ul li {
    padding: 5px 0;
  }
  @media (min-width: 1600px) {
    .block-success {
      height: calc(100vh - 5.625rem);
      min-height: 42.5rem;
    }
  }
  @media (max-width: 767px) {
    .block-success {
      min-height: calc(100vh - 8.125rem);
    }
    .block-success .h2 {
      letter-spacing: 5px !important;
    }
  }
</style>
<div class="block-success">
  <div class="container text-center">
    <h2 class="mb-5">THANK YOU!</h2>
    <p>{{ info.summary }}</p>
    <p>{{ text_message }}</p>
    <div class="row col-sm-7 mx-auto">
      <a class="col-sm-6 d-flex align-items-center justify-content-center mt-8" href="/"><button type="button" class="cus_btn w-100">Tiếp tục mua sắm</button></a>
      <a class="col-sm-6 d-flex align-items-center justify-content-center mt-8" href="/account/orders"><button type="button" class="cus_btn w-100">Đơn hàng đã mua</button></a>
    </div>
  </div>
</div>
{% if wheel %}
  <link href="/content/assets/wheel/css/hc-canvas-luckwheel.css" type="text/css" rel="stylesheet" media="screen">
  <style>
    .popup-reg {
      position: fixed;
      width: 100%;
      height: 100%;
      top: 100%;
      left: 0;
      z-index: 1000;
      overflow: auto;
      transition: 0.3s ease-in-out;
    }
    .popup-reg.active {
      top: 0;
    }
    .popup-reg .box-reg {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      width: auto;
      width: 90%;
      z-index: 2;
      background: #fff;
      padding: 10px 10px 10px 10px
    }

    backdrop {
      position: fixed;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      top: 0;
      left: 0;
      z-index: 1;
      display: none;
    }
    .popup-reg.active backdrop {
      display: block;
    }
    .popup-reg .btn-dark {
      background-color: #666666;
      border-color: #666666;
    }
    .popup-reg .btn-dark:hover {
      background-color: #000;
      border-color: #000;
    }
    .popup-reg .custom-radio .custom-control-input:checked ~ .custom-control-label::after {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-7 -7 14 14'%3e%3ccircle r='7' fill='%23666666'/%3e%3c/svg%3e");
    }
    .popup-reg .btn-close {
      background-color: #ffffff;
      width: 40px;
      height: 40px;
      position: relative;
      cursor: pointer;
    }
    .popup-reg .btn-close:before, .popup-reg .btn-close:after {
      content:'';
      height: 2px;
      width: 20px;
      background-color: #000000;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%) rotate(45deg);
    }
    .popup-reg .btn-close:after {
      transform: translate(-50%,-50%) rotate(-45deg);
    }

    @media (max-width: 1279px) {
      .popup-reg .box-reg {
        top: 0;
        transform: translate(-50%, 20px);
        max-width: 90%
      }
      .popup-reg .bg-reg {
        background-image: none;
        margin: 0
      }
    }
    @media (max-width: 767px) {
      .popup-reg .box-reg {
        transform: translateY(0);
        padding: 10px 30px 30px;
        width: 100%;
        top: unset;
        bottom: 0;
        left: 0;
        max-width: 100%
      }
      backdrop {
        display: none !important;
      }
    }
    @media (max-width: 575px) {
      .popup-reg .box-reg {
        padding: 10px 0 30px;
      }
      backdrop {
        display: none !important;
      }
    }
  </style>
  <div class="popup-reg">
    <section class="box-reg overflow-hidden">
      <div class="bg-reg">
        <div class="row no-gutters">
          <div class="col text-center">
            {{ wheel }}
          </div>
          <div class="position-absolute" style="top: 0; right: 0"><div class="btn-close"></div></div>
        </div>
      </div>
    </section>
    <backdrop></backdrop>
    <script>
      $('.btn-close').click(function() {
        $('.popup-reg').removeClass('active');
      });
      $(window).load(function() {
        $('.popup-reg').addClass('active')
      });
    </script>

  </div>
{% endif %}
